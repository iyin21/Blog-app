<%- include('partials/header'); -%>
<div class="container">
	<h1 class="text-centre">Add New Comment to <%= post.title %></h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/posts/show/<%= post._id %>/comments" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[name]" placeholder="name" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
			</div>		
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit!</button>
			</div>
		</form>
	</div>	
</div>

<%- include('partials/footer'); -%>